<section class="pagination">
    <% if (currentPage!==1 && previousPage!==1){ %>
        <a href="/admin/products?page=1">1</a>
        <% } %>


            <% if (hasPreviousPage){ %>
                <a href="/admin/products?page=<%= previousPage %>">
                    <%= previousPage %>
                </a>
                <% } %>
                    <a href="/admin/products?page=<%= currentPage %>" class='active'>
                        <%= currentPage %>
                    </a>
                    <% if (hasNextPage){ %>
                        <a href="/admin/products?page=<%= nextPage %>">
                            <%= nextPage %>
                        </a>
                        <% } %>
                            <% if (lastPage !==currentPage && nextPage !==lastPage){ %>


                                <a href="/admin/products?page=<%= lastPage %>">
                                    <%= lastPage %>
                                </a>
                                <% } %>
</section>