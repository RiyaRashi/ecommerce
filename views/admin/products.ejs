<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>

                <% if (prods.length> 0) { %>
                    <div class="row">
                        <% for (let product of prods) { %>

                            <div class="col-12 col-lg-6 my-3 col-sm-12 col-md-12">
                                <article>
                                    <div class="card w-50">

                                        <img class="card-img-top" src="/<%= product.imageUrl %>"
                                            alt="<%= product.title %>">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= product.title %>
                                            </h5>
                                            <p class="card-text">Rs.<%= product.price %>
                                            </p>
                                            <p class="card-text">
                                                <%= product.description %>
                                            </p>
                                            <div class='btn-group'>
                                                <a href="/admin/edit-product/<%=product._id%>?edit=true"
                                                    class="btn btn-lg btn-success cartbutton"> <i
                                                        class="fas fa-edit"></i>edit</a>
                                                <form action="/admin/delete-product" method="POST">
                                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                                    <!-- postdelete ke liye -->
                                                    <!-- saare form ye csrf wala -->
                                                    <input type='hidden' name="_csrf" value="<%= csrfToken %>">
                                                    <button class="btn btn-lg btn-danger cartbutton" type="submit"> <i
                                                            class="fas fa-trash"></i> delete</button>

                                                </form>

                                            </div>


                                        </div>

                                    </div>
                                </article>
                            </div>

                            <% } %>
                    </div>
                    <%} else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
                <!-- <script src="/js/admin.js"></script> -->