<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h1 class="headform">
                    Order Summary
                </h1>
                <ul class="cart__item-list">
                    <% products.forEach(p=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= p.productId.title %>
                            </h1>
                            <h2>Quantity: <%= p.quantity %>
                            </h2>

                        </li>
                        <% }) %>
                </ul>


                <center>
                    <div class="centered">
                        <hr>
                        <h2><i>total:<%= totalSum%></i></h2>
                    </div>
                    <div class="centered">
                        <button id="order-btn" class="btn btn-lg btn-success">order now</button>
                    </div>
                </center>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51HbixqGwPpdmM3feIsiGwoQgnStUNhBqwH18wuf2inFmTpzRKivUC48mSAJq14KPPfAbd2Rxz3gmmPzBqfovB1zB00wwSzVMdw');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function () {
                        stripe.redirectToCheckout({

                            sessionId: '<%= sessionId%>'
                        });
                    });
                </script>

            </main>
            <%- include('../includes/end.ejs') %>